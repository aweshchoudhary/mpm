<a href="/product/<%= e.id %>" class="card my-3">
  <div class="card-img d-flex align-items-center justify-content-center">
    <img
        src="/img/products/<%= e.img %>"
        class="card-img-top"
        alt="<%= e.name %>"
      />
  </div> 
    <div class="card-body p-md-3 p-2 border-top">
      <p class="card-text fs-6">  
        <p>
          <% if(e.category == null){ %>
            <%= e.model %>
            <%}else{%>
              <% category.map((c)=>{ %>
                <% if(e.category == c.id ){ %>
                <%= c.name + ", " + e.model %>
                <%}%>
                <%})%>
            <%}%>
        </p>
      </p>
    </div>
  </a>    